// ~/.config/niri/config.kdl  — version minimale

input {
  keyboard.xkb.layout "fr"   // AZERTY ; "us" si tu préfères
}

# Un bloc générique pour n’importe quel écran détecté
output "*" {
  mode "preferred"
  scale 1
  transform "normal"
  focus-at-startup
}

# Programmes lancés au démarrage
spawn-at-startup "waybar"
spawn-at-startup "alacritty"

binds {
  Mod+Return { spawn "alacritty" }  # terminal
  Mod+Q      { quit }               # quitter Niri proprement
}
