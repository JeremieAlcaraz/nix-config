// ~/.config/niri/config.kdl  ——  version concise
input {
  keyboard.xkb.layout "fr"   // AZERTY ; mod-key = Super par défaut
}

output "*" {                 // active tout moniteur détecté
  mode preferred
  scale 1
  focus-at-startup
}

spawn-at-startup "waybar"    // barre
spawn-at-startup "alacritty" // lance un terminal au démarrage

binds {
  Mod+Return { spawn "alacritty" }   // raccourci terminal
  Mod+Q      { quit }                // quitte Niri proprement
}
