// ~/.config/niri/config.kdl  –  version « hello world »

input {
  keyboard {
    xkb { layout "fr" }         // AZERTY ; remplace par "us" si besoin
  }
}

output "*" {                    // active tout écran détecté
  mode preferred
  focus-at-startup
}

spawn-at-startup "waybar"
spawn-at-startup "alacritty"

binds {
  Mod+Return { spawn "alacritty" }
  Mod+Q      { quit }
}
